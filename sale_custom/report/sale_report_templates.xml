<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_saleorder_document_inherit_sale_management" inherit_id="sale.report_saleorder_document">
    
    <xpath expr="//div[@name='informations_date']" position="after">

        <div t-if="doc.order_type" class="col-auto col-3 mw-100 mb-2" name="order_type">
            <strong t-if="doc.order_type in ['draft', 'sent']">Order Type:</strong>
            <strong t-else="">Order Type:</strong>
            <p class="m-0" t-field="doc.order_type"/>
        </div>
        <div t-if="doc.event_start" class="col-auto col-3 mw-100 mb-2" name="event_start">
            <strong t-if="doc.state in ['draft', 'sent']">Event Start:</strong>
            <strong t-else="">Event Start:</strong>
            <p class="m-0" t-field="doc.event_start"/>
        </div>
        <div t-if="doc.event_end" class="col-auto col-3 mw-100 mb-2" name="event_end">
            <strong t-if="doc.state in ['draft', 'sent']">Event End:</strong>
            <strong t-else="">Event End:</strong>
            <p class="m-0" t-field="doc.event_end"/>
        </div>
    </xpath>
</template>
</odoo>
