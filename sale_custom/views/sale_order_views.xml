<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_order_form_inherited_custom" model="ir.ui.view">
            <field name="name">view.sale.order.form.inherited.custom</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="order_type" attrs="{ 'readonly' : [('state', 'in', ('sale','done'))] }"/>
                    <label for="event_start" string="Event Date &amp; Time"/>
                    <div class="o_row">
                        <field name="event_start" widget="daterange" nolabel="1" class="oe_inline"  attrs="{ 'readonly' : [('state', 'in', ('sale','done'))] }"/>
                        <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                        <field name="event_end" widget="daterange" nolabel="1" class="oe_inline" attrs="{ 'readonly' : [('state', 'in', ('sale','done'))] }"/>
                    </div>
                    <field name="commitment_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
